@model FoodStore.Models.ImageModel

@{
    ViewBag.Title = "Create Image";
}

<style>
    .label1 {
        font-size: 24px;
        color: black;
        font-family: Arial;
        font-weight: bold;
        display: block;
    }

    body {
        background-color: lightblue;
    }

    #label2 {
        font-size: 20px;
        color: cornflowerblue;
    }
</style>

<h2>Create Food</h2>

@using (Html.BeginForm("CreateImage", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    
    <div class="form-group">
        <label class="control-label col-md-2 label1">Vegetable</label>
        <div class="col-md-10">
            @Html.EditorFor(ImageModel => ImageModel.vegetable)
            @Html.ValidationMessageFor(ImageModel => ImageModel.vegetable)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 label1">Image Link</label>
        <div class="col-md-10">
            @Html.EditorFor(ImageModel => ImageModel.ImageLink)
            @Html.ValidationMessageFor(ImageModel => ImageModel.ImageLink)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 label1">Category</label>
        <div class="col-md-10">
            @Html.EditorFor(ImageModel => ImageModel.Category)
            @Html.ValidationMessageFor(ImageModel => ImageModel.Category)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 label1">Price</label>
        <div class="col-md-10">
            @Html.EditorFor(ImageModel => ImageModel.Price)
            @Html.ValidationMessageFor(ImageModel => ImageModel.Price)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 label1">Image Data</label>
        <div class="col-md-10">
            @Html.EditorFor(ImageModel => ImageModel.ImageSource)
            @Html.ValidationMessageFor(ImageModel => ImageModel.ImageSource)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

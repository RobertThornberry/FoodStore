@model FoodStore.Models.FoodModel

@{
    ViewBag.Title = "Create Food";
}

<style>
    .label1 {
        font-size: 24px;
        color: black;
        font-family: Arial;
        font-weight: bold;
        display: block;
    }

    body {
        background-color: lightblue;
    }

    #label2 {
        font-size: 20px;
        color: cornflowerblue;
    }
</style>

<h2>Create Food</h2>

@using (Html.BeginForm("CreateFood", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <div class="form-group">
        <label class="control-label col-md-2 label1">Vegetable</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.vegetable)
            @Html.ValidationMessageFor(model => model.vegetable)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 label1">Serving Size</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ServingSize)
            @Html.ValidationMessageFor(model => model.ServingSize)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 label1">Country Of Origin</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.CountryOfOrigin)
            @Html.ValidationMessageFor(model => model.CountryOfOrigin)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 label1">Storage</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Storage)
            @Html.ValidationMessageFor(model => model.Storage)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 label1">Packaging</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Packaging)
            @Html.ValidationMessageFor(model => model.Packaging)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 label1">Stock</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Stock)
            @Html.ValidationMessageFor(model => model.Stock)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 label1">Category</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Category)
            @Html.ValidationMessageFor(model => model.Category)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 label1">Price</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
